<Page x:Class="WPF.Portafolio.Pages.ListaNotas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF.Portafolio.Pages"
      mc:Ignorable="d"
      Title="ListaNotas"
      Height="550" Width="810" VerticalAlignment="Center" HorizontalAlignment="Center" ShowsNavigationUI="False">

    <Grid HorizontalAlignment="Left" Width="810">
        <Label x:Name="Titulo" Content="Notas Del Alumno" FontSize="30" VerticalAlignment="Top" RenderTransformOrigin="1.188,1.219" Margin="247,10,247,0" Height="46"/>
        <DataGrid x:Name="dgNotasAlumno" Margin="30,168,30,40"  IsReadOnly="True" SelectionChanged="dgNotasAlumno_SelectionChanged"/>
        <TextBox x:Name="txtBuscarNombreOApellido" HorizontalAlignment="Left" Height="23" Margin="30,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226" TextChanged="txtBuscarNombreOApellido_TextChanged"/>
        <Label x:Name="label" Content="Seleccione un alumno para ver sus notas" HorizontalAlignment="Left" Margin="501,142,0,0" VerticalAlignment="Top" Height="26" Width="226"/>
        <Label x:Name="label_Copy" Content="Escriba nombre o apellido para busqueda" HorizontalAlignment="Left" Margin="30,85,0,0" VerticalAlignment="Top" Height="26" Width="240"/>
    </Grid>

</Page>
