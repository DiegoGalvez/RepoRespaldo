        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="401" Margin="574,193,0,0" Stroke="Black" VerticalAlignment="Top" Width="431"/>
        <Label x:Name="lblTituloFotos" Content="Fotos del domicilio" FontSize="20" HorizontalAlignment="Left" Margin="589,162,0,0" VerticalAlignment="Top"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="139" Margin="605,231,0,0" VerticalAlignment="Top" Width="162"/>
        <Image x:Name="image1" HorizontalAlignment="Left" Height="139" Margin="807,231,0,0" VerticalAlignment="Top" Width="158"/>
        <Image x:Name="image2" HorizontalAlignment="Left" Height="147" Margin="605,420,0,0" VerticalAlignment="Top" Width="162"/>
        <Image x:Name="image3" HorizontalAlignment="Left" Height="147" Margin="807,420,0,0" VerticalAlignment="Top" Width="158"/>

